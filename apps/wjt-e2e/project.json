{
  "name": "wjt-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "implicitDependencies": ["wjt"],
  "targets": {
    "e2e:local": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/wjt-e2e/playwright.local.config.ts",
        "skipInstall": true
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/wjt-e2e/playwright.ci.config.ts",
        "skipInstall": false
      }
    },
    "build-wjt-service-image": {
      "command": "nx docker-build wjt",
      "outputs": ["{workspaceRoot}/dist/apps/wjt-e2e"]
    }
  }
}
